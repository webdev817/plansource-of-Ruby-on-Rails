<p>Edit attributes and select save.</p>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{ view PlanSource.TextField placeholder="Plan name" focus=true id="edit-plan-name" modelAttr="plan_name" title="Plan name" class="left ps-input"}}
      <div class="help-inline"></div>
    </div>
  </div>
  {{#if belongsToShops}}
  <div class="form-group">
    <label class="col-sm-2 control-label">CSI</label>
    <div class="col-sm-10">
      {{ view PlanSource.CSIField placeholder="CSI" id="edit-plan-csi" modelAttr="csi" title="CSI" class="short ps-input" }}
      <div class="help-inline"></div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Status</label>
    <div class="col-sm-10">
      <input hidden id="init-select-status" value="{{unbound status}}">
      <select id="edit-select-status" class="form-control ps-input" style="width:230px;display:inline-block">
        {{#each statusOptions}}
        <option value="{{unbound this}}">{{this}}</option>
        {{/each}}
      </select>
      <div class="help-inline"></div>
    </div>
  </div>
  {{/if}}
  {{#if belongsToASI}}
  <div class="form-group">
    <label class="col-sm-2 control-label">ASI</label>
    <div class="col-sm-10">
      {{ view PlanSource.TextField placeholder="ASI"  id="edit-plan-code" modelAttr="code" title="ASI" class="ps-input"  }}
      <div class="help-inline"></div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Affects</label>
    <div class="col-sm-10">
      {{ view PlanSource.TextField placeholder="Plans Affected"  id="edit-plan-tags" modelAttr="tags" title="Affects Plan" class="left ps-input ps-input-lg"}}
      <div class="help-inline"></div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{view PlanSource.QuillBox id="edit-plan-description" modelAttr="description"}}
      <div class="help-inline"></div>
    </div>
  </div>
  {{/if}}
  {{#if isNotShopOrASI}}
  <div class="form-group">
    <label class="col-sm-2 control-label">Number</label>
    <div class="col-sm-10">
      {{ view PlanSource.TextField placeholder="#" id="edit-plan-num" modelAttr="plan_num" title="Plan number" class="short ps-input" }}
      <div class="help-inline"></div>
    </div>
  </div>
  {{/if}}
  <div class="form-group">
    <label class="col-sm-2 control-label">Filename</label>
    <div class="col-sm-10 form-control-static">
      {{filename}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Tab</label>
    <div class="col-sm-10 form-control-static">
      {{#if parent.model.isMyJob}}
        <input hidden id="init-select-tab" value="{{unbound tab}}">
        <select id="edit-select-tab" class="form-control ps-input" style="width:230px;display:inline-block">
          <option value="Plans">Plans</option>
          <option value="Addendums">Addendums</option>
          <option value="Consultants">Support</option>
          <option value="Calcs & Misc">Calcs &amp; Misc</option>
        </select>
      {{else}}
        {{tab}}
      {{/if}}
    </div>
  </div>
</div>
<script>
if($("#edit-plan-description").length > 0){
	var editor = new Quill('#edit-plan-description', {
		theme: 'snow'
	});
}
</script>
