<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10 form-control-static">
      {{plan_name}}
    </div>
  </div>
  {{#if belongsToShops}}
  <div class="form-group">
    <label class="col-sm-2 control-label">CSI</label>
    <div class="col-sm-10 form-control-static">
      {{csi_formatter csi}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Status</label>
    <div class="col-sm-10 form-control-static">
      {{status}}
    </div>
  </div>
  {{/if}}
  {{#if belongsToASI}}
  <div class="form-group">
    <label class="col-sm-2 control-label">ASI</label>
    <div class="col-sm-10 form-control-static">
      {{code}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10 form-control-static">
      {{{getDescriptionHTML}}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Affects</label>
    <div class="col-sm-10 form-control-static">
      {{tagsOrDefault}}
    </div>
  </div>
  {{/if}}
  {{#if isNotShopOrASI}}
  <div class="form-group">
    <label class="col-sm-2 control-label">Number</label>
    <div class="col-sm-10 form-control-static">
      {{plan_num}}
    </div>
  </div>
  {{/if}}
  <div class="form-group">
    <label class="col-sm-2 control-label">File name</label>
    <div class="col-sm-10 form-control-static">
      <a href="/api/plans/embedded/{{unbound id}}" target="_blank">{{filename}}</a>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">File uploaded</label>
    <div class="col-sm-10 form-control-static">
      {{format-date plan_updated_at}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Plan created</label>
    <div class="col-sm-10 form-control-static">
      {{format-date created_at}}
    </div>
  </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Download Share Link</label>
      <div class="col-sm-10 form-control-static">
        <a href="{{unbound download_share_link}}">{{unbound download_share_link}}</a>
      </div>
    </div>

</div>
