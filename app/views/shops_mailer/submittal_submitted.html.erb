<!DOCTYPE html>
<html>
    <head>
    </head>
    <body>
      <h1><%= @subject %></h1>

      <p><strong>Job:</strong> <%= @submittal.job.name %>
      <p><strong>Submitter:</strong> <%= @submittal.user.full_name %>
      <p><strong>Submitter Email:</strong> <%= @submittal.user.email %>
      <p><strong>CSI Code:</strong> <%= @submittal.data["csi_code"] %>
      <p><strong>Description:</strong> <%= @submittal.data["description"] %>
      <p><strong>Notes:</strong> <%= @submittal.data["notes"] %>

      <p><strong>Attachments:</strong></p>

        <% @submittal.attachments.each do |attachment| %>
          <p>
            <%= link_to attachment.filename, api_submittal_download_attachment_url(attachment.id, host: ENV["SITE_URL"]) %>
          </p>
        <% end %>

        <% if @submittal.attachments.empty? %>
          <p>No Attachments</p>
        <% end %>

        <br>

        <p>
          <%= link_to "View Shops for this job.", app_url(host: ENV["SITE_URL"]) + "#/jobs/#{@submittal.job.id}/shops" %>
        </p>
    </body>
</html>
