<% content_for :title, "Finish Signing Up" %>

<div class="section">
    <div class="container">
	<h1>Finish Signing Up</h1>
	<div class="row">
	    <div class="span4">
		<%= simple_form_for(@user, url: signup_link_path(@signup_link.key), method: :put,
			as: :user, :html => {:class => 'form-vertical' }) do |f| %>
		    <%= f.error_notification %>
		    <%= display_base_errors @user %>

		    <%= f.input :first_name, :required => true, :autofocus => true %>
		    <%= f.input :last_name, :required => true %>
		    <%= f.input :company, :required => true %>
		    <%= f.input :password, :required => true %>

		    <%= f.button :submit, 'Finish Signing Up', :class => 'button button-blue' %>
		<% end %>
	    </div>
	</div>
    </div>
</div>
